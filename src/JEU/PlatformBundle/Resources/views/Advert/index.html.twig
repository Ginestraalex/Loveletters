{% extends "JEUPlatformBundle::layout.html.twig" %}

{% block title %}
  Accueil - {{ parent() }}
{% endblock %}

{% block jeuplatform_body %}

  <h2>Liste des joueurs</h2>

  <ul>
    {% for advert in listAdverts %}
      <li>
        <a href="{{ path('jeu_platform_view', {'id': advert.id}) }}">
          {{ advert.title }}
        </a>
        par {{ advert.author }},
        le {{ advert.date|date('d/m/Y') }}
      </li>
    {% else %}
      <li>Pas (encore !) de joueurs</li>
    {% endfor %}
  </ul>

{% endblock %}