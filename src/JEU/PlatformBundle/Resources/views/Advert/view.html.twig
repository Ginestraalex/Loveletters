    {% endblock %}
  </head>

  <body>
  <div class="container">
    <div id="header" class="jumbotron">
      <h1>Love letters</h1>
    </div>
      <div id="joueur1" align="middle">
			Player 1
            <img src="{{app.request.basepath}}/image/verso.jpg" height = 200  width = 150 alt="verso"/>
		</div>

		<div align="center">
<img src="{{app.request.basepath}}/image/fond.jpg" height = 600  width = 1000 alt="plateau" align="center" />
