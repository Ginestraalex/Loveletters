    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    <script>
                        
				function tirerCarte(){
				document.getElementById('joueur1').innerHTML = '<div> Player 1 </div>' ;
				document.getElementById('joueur1').innerHTML += '<img src="{{app.request.basepath}}/image/verso.jpg" width="150" height="200" />';
				document.getElementById('joueur1').innerHTML += '<img src="{{app.request.basepath}}/image/verso.jpg" width="150" height="200"/>';
				document.getElementById('joueur2').innerHTML = '<div> Player 2 </div>' ;
                                document.getElementById('joueur2').innerHTML += '<img src="{{app.request.basepath}}/image/verso.jpg" width="150" height="200"/>';
                                document.getElementById('joueur2').innerHTML += '<img src="{{app.request.basepath}}/image/verso.jpg" width="150" height="200" />';
			};
                        
                        function jouerCarte(){
				document.getElementById('joueur1').innerHTML = '<div align="center">  </div>' ;
				document.getElementById('joueur1').innerHTML += '<img src="../Applications/MAMP/htdocs/Symfony/web/image/verso.jpg" width="150" height="200" />';
				document.getElementById('joueur1').innerHTML += '<img src="../Applications/MAMP/htdocs/Symfony/web/image/verso.jpg" width="150" height="200"/>';
